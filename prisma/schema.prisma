generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SYSTEM
  USER
}

model Chat {
  id        Int       @id @default(autoincrement())
  pdfName   String
  pdfUrl    String
  createdAt DateTime  @default(now())
  userId    String    @db.VarChar(256)
  fileKey   String

  Messages  Message[] // Defines the one-to-many relationship with the Message model

  @@map("chats") // Maps the model to the "chats" table
}


model Message {
  id        Int       @id @default(autoincrement())
  chatId    Int
  content   String
  createdAt DateTime  @default(now())
  role      Role

  Chat      Chat      @relation(fields: [chatId], references: [id])

  @@map("messages") // Maps the model to the "messages" table
}
